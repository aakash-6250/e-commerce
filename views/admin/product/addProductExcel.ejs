<%- include('../partials/header') %>

<%- include('../partials/sidebar') %>

<main class="relative bg-[#F2F7FB] dark:bg-[#0F172A] w-full pb-[50px] ">
    <%- include('../partials/navbar') %>
    
    
    
    
    <div class="container w-full px-6 py-8 flex flex-col gap-[30px] m-auto">

        <h1 class="font-[merriweather] text-2xl font-bold ">Add Products With Excel</h1>
    
        <form id="add-product-excel-form" enctype="multipart/form-data" class="bg-white dark:bg-[#1E293B] rounded-2xl w-full min-w-[300px] p-5 flex flex-col gap-[20px] justify-center items-center">
            <label for="productFile" class="border-dashed border-[1px] border-blue-600 rounded-xl w-full h-[150px] cursor-pointer flex flex-col justify-center items-center gap-[5px] p-3">
                <i class="ri-upload-cloud-2-line text-5xl"></i>
                <p class="file-label text-lg text-zinc-400 text-center">Drag and drop your excel file here or <span class="text-blue-600">browse</span></p>
            </label>
            <input type="file" name="productFile" id="productFile" class="hidden" accept=".xlsx, .xls" >
            <button type="submit" class="submit-btn px-[24px] py-[12px] rounded-[58px] cursor-not-allowed bg-blue-600 text-white" disabled>Upload</button>
        </form>
        
    
    </div>
    
    
    
    
        
    <footer class="h-[50px] absolute bottom-0 left-0 w-full dark:bg-[#1E293B] bg-white flex justify-center items-center ">
        <p class="text-center text-zinc-600">Design with <span class="heart text-red-600"><i class="ri-heart-line"></i></span> by <a class="hover:text-red-600 text-blue-600" href="https://www.linkedin.com/in/aakash6250">Aakash Patel</a> All rights reserved.</p>
    </footer>
    </main>
<%- include('../partials/footer') %>